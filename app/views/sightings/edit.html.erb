<h2 class="title">Update Sighting</h2>

<%= form_for [@animal, @sighting] do |f| %>
    <%= f.hidden_field :animal_id %>
    <%= f.label :date %>
    <%= f.text_field :date %><br/>
    
    <%= f.label :time %>
    <%= f.text_field :time %><br/>
    
    <%= f.label :latitude %>
    <%= f.text_field :latitude %><br/>
    
    <%= f.label :longitude %>
    <%= f.text_field :longitude %><br/>
    <br/>
    <%= f.submit "Update", class: "button is-success" %>
<% end %>